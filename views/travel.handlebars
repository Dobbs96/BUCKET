<div class="container">
  {{#each travels as |travel|}}
    <div class="row">
      <div class="col s12 m9">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">{{location}} </span>
            <p>{{format_date starting_date}} to {{format_date ending_date}}</p>
            <p>Budget: ${{budget}}</p>
            <p>{{what_do}}</p>
            <p>written by {{user.username}}</p>

          </div>
          <div class="card-action">
            <a
              id="comment"
              class="waves-effect waves-light btn"
              onclick="newComment()"
            >Comment</a>
            <form
              class="col s12"
              action="../api/comment/travel/{{id}}"
              method="POST"
            >
              <div id="new-comment"></div>
            </form>
            {{#each comments as |comment|}}
              <div>
                {{!-- <p>{{user.username}}</p> --}}
                <p>{{comment.comment}}</p>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
    <br />
  {{/each}}
</div>